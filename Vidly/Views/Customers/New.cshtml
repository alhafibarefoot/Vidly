@model Vidly.ViewModels.CustomerFormViewModel
@{
    ViewBag.Title = "New";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>New Customer</h2>

@using (Html.BeginForm("Save", "Customers")) 
{ @*=<form>*@
    <div class="form-group">
        @Html.LabelFor(m => m.Customer.Name)
        @Html.TextBoxFor(m => m.Customer.Name, new { @class = "form-control" }) @*@class = "form-control"  get bootstrap shape of textbox*@  @*Note:@Html.TextBoxFor :get annotation from customer class model such as [Required] [StringLength(255)],check by using chrome inspect element*@ 
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Customer.Birthdate)   @*=<label></label>*@
        @*<label>Date Birth</label> you can change label text but when press on lable not focus in textbox*@
        @*<label for="Birthdate">Date Birth</label>*@
        @Html.TextBoxFor(m => m.Customer.Birthdate, "{0:dd/MM/yyyy}", new { @class = "form-control" }) @*=<input />*@
    </div>
@* big checkbox ugly
    <div class="form-group">
     @Html.LabelFor(m => m.IsSubscribedToNewsletter)
        @Html.CheckBox(m => m.IsSubscribedToNewsletter, new { @class = "form-control" })
    </div>
*@

    
    

    <div class="form-group">
        @Html.LabelFor(m => m.Customer.MembershipTypeId)
        @Html.DropDownListFor(m => m.Customer.MembershipTypeId, new SelectList(Model.MembershipTypes, "Id", "Name"), "Select Membership Type", new { @class = "form-control" })
    </div>

    <div class="checkbox">
        @*getbootstrap.com/css*@
        <label>
            @Html.CheckBoxFor(m => m.Customer.IsSubscribedToNewsletter) Subscribed to Newsletter?
        </label>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>

}@*=</form>*@